{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@fm/api/guards": ["libs/api/guards/src/index.ts"],
      "@fm/auth": ["libs/shared/state/auth/src/index.ts"],
      "@fm/daily-co": ["libs/main-web/daily-co/src/index.ts"],
      "@fm/gql": ["libs/shared/graphql/src/index.ts"],
      "@fm/main-web-feature-auth": ["libs/main-web/feature/auth/src/index.ts"],
      "@fm/main-web-feature-prereg": [
        "libs/main-web/feature/prereg/src/index.ts"
      ],
      "@fm/main-web-ui-form": ["libs/main-web/ui/form/src/index.ts"],
      "@fm/main-web/types": ["libs/main-web/types/src/index.ts"],
      "@fm/material-web-feature-auth": [
        "libs/material-web/feature/auth/src/index.ts"
      ],
      "@fm/material-web/material-form-schema-generator": [
        "libs/material-web/feature/material-form-schema-generator/src/index.ts"
      ],
      "@fm/material-web/types": ["libs/material-web/types/src/index.ts"],
      "@fm/mui": ["libs/shared/ui/mui/src/index.ts"],
      "@fm/network": ["libs/shared/state/network/src/index.ts"],
      "@fm/shared-types": ["libs/shared/types/src/index.ts"],
      "@fm/shared-ui-form": ["libs/shared/ui/form/src/index.ts"],
      "@fm/tailwind/*": [".tailwind/*"],
      "@fm/utils": ["libs/shared/utils/src/index.ts"],
      "@rjsf/material-ui/*": ["node_modules/@rjsf/material-ui/dist/*"],
      "fm/main-web-feature-network": [
        "libs/main-web/feature/network/src/index.ts"
      ],
      "fm/material-web-feature-material-browser": [
        "libs/material-web/feature/material-browser/src/index.ts"
      ],
      "fm/material-web-feature-network": [
        "libs/material-web/feature/network/src/index.ts"
      ],
      "fm/material-web-state": ["libs/material-web/state/src/index.ts"],
      "fm/shared-feature-network": ["libs/shared/feature/network/src/index.ts"],
      "fm/shared-util-routing": ["libs/shared/util/routing/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
